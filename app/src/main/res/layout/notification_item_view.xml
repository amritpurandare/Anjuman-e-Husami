<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="05dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/notification_card_bg"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <anjuman.e.husami.CustomTextView
                android:id="@+id/text_notification_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/notification_item_texts"
                android:textSize="18sp"
                app:FontName="@string/font" />

            <anjuman.e.husami.CustomTextView
                android:id="@+id/text_notification_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="08dp"
                android:maxLines="1"
                android:textColor="@color/notification_item_texts"
                android:textSize="16sp"
                app:FontName="@string/font" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>